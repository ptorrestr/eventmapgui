<%= content_tag :h4, "Data" %>
<%= content_tag :ul, :class =>"nav nav-tabs" do %>
  <%= content_tag :li, :class => "active" do %><%= link_to "Statistics", "#statistics", :"data-toggle" => "tab" %><% end %>
  <%= content_tag :li do %><%= link_to "Videos", "#videos", :"data-toggle" => "tab" %><% end %>
  <%= content_tag :li do %><%= link_to "Images", "#images", :"data-toggle" => "tab" %><% end %>
<% end %> <!-- nav nav-tabs -->

<%= content_tag :div, :class => "tab-content" do %>
  <%= content_tag :div, :class => "tab-pane active", :id => "statistics" do %>
    <%= content_tag :div, :class => "row-fluid" do %>
      <%= content_tag :div, :class => "span10 offset1" do %>
        <%= high_chart("my_id4", @chart1)  %>
        <%= high_chart("my_id5", @chart2) do |c| %>
          <%= raw "options.tooltip.formatter = function() {return '<b> YUPI!! '+ this.point.name +'</b>: '+ this.y +' %';}"  %>
          <%= raw "options.plotOptions.pie.dataLabels.formatter = function() { if (this.y > 5) return this.point.name; }"  %>
        <% end %> <!-- high chart -->
      <% end %> <!-- span10 offset1 -->
    <% end %> <!-- row fluid -->
  <% end %> <!-- statistics -->
  <%= content_tag :div, :class => "tab-pane", :id => "videos" do %>
    <%= content_tag :ul, :class => "tumbnails" do %>
      <%= content_tag :li, :class => "span10" do %>
        <%= content_tag :div, :class => "thumbnail" do %>
          <%= content_tag(:iframe, '',:id => "video1", :onload => "setIframeHeight(video1)", :width => "100%", :src => "//www.youtube.com/embed/c0L0WIK2Ync", :frameborder => "0", :allowfullscreen => "true").html_safe %>
        <% end %> <!-- div thumbnail -->
      <% end %> <!-- li span10 -->
    <% end %> <!-- ul tumbnails -->
    <%= content_tag :ul, :class => "tumbnails" do %>
      <%= content_tag :li, :class => "span10" do %>
        <%= content_tag :div, :class => "thumbnail" do %>
          <%= content_tag(:iframe, '', :id => "video2", :onload => "setIframeHeight(video2)", :width => "100%", :src => "//player.vimeo.com/video/77097538?title=0&amp;byline=0&amp;portrait=0&amp;badge=0", :frameborder => "0", :webkitallowfullscreen => "true", :mozallowfullscreen => "true", :allowfullscreen => "true").html_safe %>
        <% end %> <!-- div thumbnail -->
      <% end %> <!-- li span10 -->
    <% end %> <!-- ul tumbnails -->
  <% end %> <!-- videos -->
  <%= content_tag :div, :class => "tab-pane", :id => "images" do %>
    <%= content_tag :ul, :class => "tumbnails" do %>
      <%= content_tag :li, :class => "span10" do %>
        <%= content_tag :div, :class => "thumbnail" do %>
          <%= link_to "Rest ~explored~", "http://www.flickr.com/photos/54413120@N04/10416220975/", :class => "embedly-card" %>
        <% end %> <!-- div thumbnail -->
      <% end %> <!-- li span10 -->
    <% end %> <!-- ul tumbnails -->
    <%= content_tag :ul, :class => "tumbnails" do %>
      <%= content_tag :li, :class => "span10" do %>
        <%= content_tag :div, :class => "thumbnail" do %>
          <%= link_to "Rest ~explored~", "http://www.flickr.com/photos/54413120@N04/10435699403/", :class => "embedly-card" %>
        <% end %> <!-- div thumbnail -->
      <% end %> <!-- li span10 -->
    <% end %> <!-- ul tumbnails -->
    <%= content_tag :ul, :class => "tumbnails" do %>
      <%= content_tag :li, :class => "span10" do %>
        <%= content_tag :div, :class => "thumbnail" do %>
          <%= link_to "Rest ~explored~", "http://instagram.com/p/fs5EpVDckO/#", :class => "embedly-card" %>
        <% end %> <!-- div thumbnail -->
      <% end %> <!-- li span10 -->
    <% end %> <!-- ul tumbnails -->
  <% end %> <!-- images -->
<% end %> <!-- tab-content -->

<script type="text/javascript" charset="utf-8">
function setIframeHeight( iframeId ) {
  var height = $(iframeId).parent().parent().parent().parent().width() * 0.8;
  $(iframeId).height(height)
}

!function(a) {
  var b="embedly-platform",c="script";
  if(!a.getElementById(b)) { 
    var d = a.createElement(c);
    d.id = b, d.src=("https:"===document.location.protocol?"https":"http")+"://cdn.embedly.com/widgets/platform.js";
    var e = document.getElementsByTagName(c)[0];
    e.parentNode.insertBefore(d,e)
  }
}(document);
</script>
